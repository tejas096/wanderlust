<% layout("/layouts/boilerplate") %> <br />
<div class="top-place">
  <div class="filters">
    <button class="filter">
      <i class="fa-solid fa-city"></i>
      <p>City</p>
    </button>
    <button class="filter">
      <i class="fa-solid fa-mountain-sun"></i>
      <p>Mountains</p>
    </button>
    <button class="filter">
      <i class="fa-brands fa-fort-awesome"></i>
      <p>Castles</p>
    </button>
    <button class="filter">
      <i class="fa-solid fa-person-swimming"></i>
      <p>Beach</p>
    </button>
    <button class="filter">
      <i class="fa-solid fa-campground"></i>
      <p>Camping</p>
    </button>
    <button class="filter">
      <i class="fa-solid fa-cow"></i>
      <p>Farms</p>
    </button>
    <button class="filter">
      <i class="fa-regular fa-snowflake"></i>
      <p>Arctic</p>
    </button>
  </div>
  <div class="form-check ms-auto form-switch form-check-reverse">
    <input
      class="form-check-input"
      type="checkbox"
      id="flexSwitchCheckReverse"
    />
    <label class="form-check-label" for="flexSwitchCheckReverse"
      >Including Taxes</label
    >
  </div>
</div>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for(let listing of allListings){%>
  <a href="/listings/<%=listing._id%>" class="listing-link"
    ><div class="card card-index">
      <img
        src="<%=listing.image.url%>"
        class="card-img-top"
        alt="ERROR"
        style="height: 20rem"
      />
      <div class="card-body">
        <p class="card-text">
          <b><%=listing.title%></b> <br />
          &#8377; <span class="display-none"><%=listing.price%></span>
          <span class="show"><%=listing.price.toLocaleString("en-IN")%></span> /
          night <br />
          <span class="display-none"><%=listing.category%></span>
        </p>
      </div>
    </div>
  </a>
  <%}%>
</div>
